@model WebNotesDataBase.ViewModels.LoginUserViewModel
@using (Html.BeginForm("Login", "Users"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <br />
    <div style="margin-bottom: 5%;">
        <ul id="menu">
            <li style="float:left;"><a><span>Login</span></a></li>
        </ul>
    </div>
    <p>For authorization, it is necessary to enter the user data of the profile created earlier, among which the e-mail address and the graphic key-code.</p>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Pass, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            <div class="row">
                <div class="g_auth" style="margin-left: 20%; max-width: 100%;">
                    <div class="row">
                        <div class="auth-left-block">
                            <div class="desk-block">
                                <table class="desk">
                                    <tbody>
                                        <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                        <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                        <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                        <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                        <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                        <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                        <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                        <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                        <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                        <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="auth-right-block">
                            <div class="horsig"><img id="sigil_O" class="sigil" src="~/Content/Tetris_O.svg" state="O" /></div>
                            <div class="horsig"><img id="sigil_S" class="sigil" src="~/Content/Tetris_S.svg" state="S" /></div>
                            <div class="horsig"><img id="sigil_Z" class="sigil" src="~/Content/Tetris_Z.svg" state="Z" /></div>
                            <div class="horsig"><img id="sigil_L" class="sigil" src="~/Content/Tetris_L.svg" state="L" /></div>
                            <div class="horsig"><img id="sigil_J" class="sigil" src="~/Content/Tetris_J.svg" state="J" /></div>
                            <div class="horsig"><img id="sigil_T" class="sigil" src="~/Content/Tetris_T.svg" state="T" /></div>
                            <div class="horsig"><img id="sigil_I" class="sigil" src="~/Content/Tetris_I.svg" state="I" /></div>
                            <div class="trash horsig" style="border-radius: 10px;"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.TextAreaFor(model => model.Pass, htmlAttributes: new { @class = "form-control", @style = "display:none;", @rows = 5, @cols = 60, id = "print_hash" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-danger" style="font-size: 20px; margin-left:25%;">@ViewBag.ErrorLogin</div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Login" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Main", "../Home/Index", null, new { @class = "btn btn-info" }) |
    @Html.ActionLink("Registration", "Registration", null, new { @class = "btn btn-warning" })
</div>
@Scripts.Render("~/bundles/jqueryval")