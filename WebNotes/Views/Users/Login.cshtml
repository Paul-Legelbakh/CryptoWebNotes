@model WebNotesDataBase.Models.User
@using (Html.BeginForm("Login", "Users"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h2>User</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Pass, htmlAttributes: new { @class = "control-label col-md-2" })
        
        <div>
            <div class="row">
                <div class="g_auth" style="margin-left: 20%;">
                    <img id="sigil_O" class="sigil" src="~/Content/Tetris_O.svg" state="O" />
                    <img id="sigil_S" class="sigil" src="~/Content/Tetris_S.svg" state="S" />
                    <img id="sigil_Z" class="sigil" src="~/Content/Tetris_Z.svg" state="Z" />
                    <img id="sigil_L" class="sigil" src="~/Content/Tetris_L.svg" state="L" />
                    <img id="sigil_J" class="sigil" src="~/Content/Tetris_J.svg" state="J" />
                    <img id="sigil_T" class="sigil" src="~/Content/Tetris_T.svg" state="T" />
                    <img id="sigil_I" class="sigil" src="~/Content/Tetris_I.svg" state="I" />
                    <div class="desk-block">
                        <table class="desk">
                            <tbody>
                                <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                                <tr><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td></tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-12">
                        @Html.TextAreaFor(model => model.Pass, htmlAttributes: new { @class = "form-control", @style = "display:none;", @rows = 5, @cols = 60, id = "print_hash" })
                        @*@Html.PasswordFor(model => model.Pass, htmlAttributes: new { @class = "form-control", id="print_hash" })*@
                        <div class="trash"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="text-danger" style="font-size:20px; margin-left:25%;">@ViewBag.ErrorLogin</div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Login" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Main", "../Home/Index", null, new { @class = "btn btn-info" }) |
    @Html.ActionLink("Registration", "Registration", null, new { @class = "btn btn-warning" })
</div>
@Scripts.Render("~/bundles/jqueryval")